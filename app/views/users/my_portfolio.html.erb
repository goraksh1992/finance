<h1>My Portfolio</h1>

<h3 class="pt-5"> Search Stock <h3>

<%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="form-group row">
        <div class="col-md-8 not-right-padding">
            <%= text_field_tag :stock, params[:stock], placeholder: "Stock Ticker", 
            class: "form-control form-control-lg" %>
        </div>
        <div class="col-md-4 not-left-padding">
            <%= button_tag type: :submit, class: "btn btn-success" do %>
                <%= fa_icon 'search 2x' %>
            <% end %>
        </div>
        <div id="result"></div>
    </div>
<% end %>
